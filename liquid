<script>
(function () {
  // Read quiz scores from URL
  const params = new URLSearchParams(window.location.search);
  const scores = {
    sheep: parseInt(params.get("sheep")) || 0,
    love_bird: parseInt(params.get("love_bird")) || 0,
    owl: parseInt(params.get("owl")) || 0,
    rhino: parseInt(params.get("rhino")) || 0
  };

  // Tie-break order if scores are equal (and default if all zero)
  const order = ["sheep", "love_bird", "owl", "rhino"];
  const topAnimal = order.reduce((best, k) => (scores[k] > scores[best] ? k : best), order[0]);

  // Point the bottom gray CTA to your Final Plan page with the animal in the query
  const fullPlanBtn = document.querySelector(".bounce-button-xl.gray");
  if (fullPlanBtn) {
    fullPlanBtn.href = "/pages/final-30-day-plan?animal=" + encodeURIComponent(topAnimal);
  }
})();
</script>
